@{
    Layout = null;
}
@model ETicaret.Models.Personel
<div class="row">
    <div class="col-md-2">
        <img src="~/Images/@Model.PersonelGorsel" class="img-fluid" />
    </div>
    <div class="col-md-9">
        <h4>Personel</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Departman.DepartmanAd)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Departman.DepartmanAd)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PersonelAd)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PersonelAd)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PersonelSoyad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PersonelSoyad)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PersonelGorsel)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PersonelGorsel)
            </dd>

        </dl>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
                    Detaylar
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
                    Okul
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">
                    Satışlar
                </a>
            </li>
          
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                @Model.Tanıtım
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                @Model.Okul
            </div>


            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                @Html.Partial("_SatısHareket", Model.SatisHarekets.ToList())

            </div>
            
           
        </div>
    </div>
</div>