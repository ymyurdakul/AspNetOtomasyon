 
@using (Html.BeginForm("Create","Kategoris")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Yeni Kategori</h4>
        <hr />
         <div class="form-group">
            @Html.Label("KategoriAd", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("KategoriAd", new { htmlAttributes = new { @class = "form-control" } })
             </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default btn-link" />
            </div>
        </div>
    </div>
}

 
